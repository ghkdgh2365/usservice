<%= form_for(@receipt) do |f| %>
  <% if @receipt.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@receipt.errors.count, "error") %> prohibited this receipt from being saved:</h2>

      <ul>
      <% @receipt.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :category, "입금/출금" %><br>
    <%= f.text_field :category %>
  </div>
  <div class="field">
    <%= f.label :pay_date, "결제날짜" %><br>
    <%= f.datetime_select :pay_date %>
  </div>
  <div class="field">
    <%= f.label :amount, "금액" %><br>
    <%= f.number_field :amount %>
  </div>
  <div class="field">
    <%= f.label :content, "결제내용" %><br>
    <%= f.text_field :content %>
  </div>
  <div class="field">
    <%= f.label :detail_content, "세부내용" %><br>
    <%= f.text_area :detail_content %>
  </div>
  <div class="field">
    <%= f.label :extra, "비고" %><br>
    <%= f.text_area :extra %>
  </div>
  <div class="field">
    <%= f.label :bill, "영수증유무" %><br>
    <%= f.text_field :bill %>
  </div>
  <div class="field">
    <%= f.label :user_id %><br>
    <%= f.hidden_field :user_id, :value => current_user.id %>
  </div>
  <div class="field">
    <%= f.label :card_id %><br>
    <%= f.hidden_field :card_id %>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
