<div class="container">
 <nav>
    <div class="nav-wrapper">
      <a href="/home/index" class="brand-logo center">어따쓰지</a>
      <ul id="nav-mobile" class="right hide-on-med-and-down">
        <li><%= link_to "메인으로", home_index_path %></li>
        
        <% if user_signed_in? %>
          <li><%= link_to "나의 정보", edit_user_registration_path %></li>
          <li><%= link_to "로그아웃", destroy_user_session_path, method: :delete, data: { confirm: "Are you sure?" } %></li>
        <% else %>
          <li><%= link_to "로그인", new_user_session_path %></li>
        <% end %>
      </ul>
    </div>
  </nav>
<p id="notice"><%= notice %></p>

<h1>결산안 보기</h1>

<table>
  <thead>
    <tr>
      <th>category</th>
      <th>Pay date</th>
      <th>Amount</th>
      <th>Content</th>
      <th>Detail content</th>
      <th>Extra</th>
      <th>Bill</th>
      <th>User</th>
      <th>Card</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @receipts.each do |receipt| %>
      <tr>
        <td><%= receipt.category %></td>
        <td><%= receipt.pay_date %></td>
        <td><%= receipt.amount %></td>
        <td><%= receipt.content %></td>
        <td><%= receipt.detail_content %></td>
        <td><%= receipt.extra %></td>
        <td><%= receipt.bill %></td>
        <td><%= receipt.user %></td>
        <td><%= receipt.card %></td>
        <td><%= link_to 'Show', receipt %></td>
        <td><%= link_to 'Edit', edit_receipt_path(receipt) %></td>
        <td><%= link_to 'Destroy', receipt, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Receipt', new_receipt_path %>
</div>
