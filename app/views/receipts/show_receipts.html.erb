              <% amount = (s.amount).to_i %>
              <% outcome_sum += amount %>
            <% end %>
          <% end %>
        <% end %>
        <% total = income_sum - outcome_sum %>
        <%= content_tag(:tr, content_tag(:td,"", colspan:9)) %>
         <tr>
