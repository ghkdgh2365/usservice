<div class="container">
 
    <div class="container z-depth-5 box1">
      <div class="container box2">
        <h2 class="center-align">로그인</h2>
        
        <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
          <div class="field">
            <%= f.label :이메일 %><br />
            <%= f.email_field :email, autofocus: true %>
          </div>
        
          <div class="field">
            <%= f.label :비밀번호 %><br />
            <%= f.password_field :password, autocomplete: "off" , :style => "color:black"%>
          </div>
          
          
        
          <% if devise_mapping.rememberable? -%>
            <div class="field">
              <%= f.check_box :remember_me %>
              <%= f.label :이메일저장 %>
            </div>
          <% end -%>
        
          <div class="actions">
             <a class="waves-effect waves-light btn"><%= f.submit "로그인" %></a>
          </div>
        <% end %>
        
        <%= render "devise/shared/links" %>
      </div>
    </div>
</div>
<style>
      @import url(//fonts.googleapis.com/earlyaccess/jejugothic.css);
       .box1{
         font-family:"Jeju Gothic";
         width: 55%;
         padding-top:20px;
         padding-bottom:30px;
         margin-top: 50px;
       }
       .box2{
         margin-top:2px;
       }
       .actions{
         text-align: center;
       }
      
     li{
       font-family: 'Jeju Gothic', sans-serif;
     }
    
</style>
