<div class="container">

  <br>
  <br>
  <h4><%= @group.username %>학생회에대한 건의사항을 올려주세요</h6>
  
  
  <table>
    <thead>
      <tr>
        <th>제목</th>
       
        <th colspan="3"></th>
      </tr>
    </thead>
  
    <tbody>
      <% @boards.each do |board| %>
        <tr>
          <td><%= board.title %></td>
         
          <td><%= link_to '게시물보기', board %></td>
          <% if user_signed_in? %>
          <td><%= link_to '수정하기', edit_board_path(board) if board.updatable_by? current_user %></td>
          <td><%= link_to '삭제하기', board, method: :delete, data: { confirm: '정말로 삭제하시겠습니까?' } if board.deletable_by? current_user%></td>
          <% end %>
        </tr>
      <% end %>
    </tbody>
  </table>
  <br>
  <hr>
  <br>
  <div class="button">
   <button class="btn waves-effect waves-light write" name="action">
     <%= link_to '건의문쓰기', new_board_group_path(@group) %>
   </button>
 </div>
  
</div>

