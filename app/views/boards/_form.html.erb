<%= form_for(@board) do |f| %>
  <% if @board.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@board.errors.count, "error") %> prohibited this board from being saved:</h2>

      <ul>
      <% @board.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :제목 %><br>
    <%= f.text_field :title %>
  </div>
  <div class="field">
    <%= f.label :내용 %><br>
    <%= f.text_area :content, :class => "materialize-textarea" %>
  </div>
  <div class="field">
    <%= f.hidden_field :group_code, :value => @group_code %>
  </div>
  <% if user_signed_in? %>
    <div class="field">
      <%= f.hidden_field :user_id, :value => current_user.id %>
    </div>
  <% end %>
  <div class="actions">
    <a class="waves-effect waves-light btn"><%= f.submit "건의하기" %></a>
  </div>
<% end %>

<style>
   @import url(//fonts.googleapis.com/earlyaccess/jejugothic.css);
   .field{
      font-family: 'Jeju Gothic', sans-serif;
   }
   .container{
     font-family: 'Jeju Gothic', sans-serif;
   }
   .btn{
     width:100%;
   }
</style>
