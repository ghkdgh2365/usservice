<div class="container">
  

    
   <div class="container box">
      <h4>
          <%= @board.title %>
      </h4>
      <hr>
      <p>
        <strong><%= @board.user.email %></strong>
        
      </p>
      <p class="school">
        <strong></strong>
        <% @group_code = @board.group_code %>
        <%= @group_code %>
      </p>
      <p>
       
        <%= @board.content %>
      </p>
      <br><br><br><br><hr>
      <div class="reply">
        <p>댓글</p>
       <% @board.replies.each do  |r|%>
          <%=r.content%><br> 
      <%end%>
      </div>
      
      
    <div class="Go">
      <%= link_to '수정하기', edit_board_path(@board) %> 
     <%= link_to '목록으로',   show_group_board_yap_path(@group_code) %>
    </div>  
  </div>
  <br>
 
  
  <div class="container box2">
    <div class="row">
    <form class="col s12" action="/reply/create/<%=@board.id%>" method="post">
      <div class="row">
        <div class="input-field col s12">
          <textarea id="textarea1" class="materialize-textarea" name="content"></textarea>
          <label for="textarea1">댓글을 입력해주세요</label>
        </div>
        <button class="btn waves-effect waves-light" type="submit" name="action">댓글달기
          <i class="material-icons right">send</i>
        </button>
      </div>
    </form>
  </div>
  </div>
</div>

